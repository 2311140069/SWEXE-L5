<h2>新規ユーザー登録</h2>

<%= form_with model: @user do |f| %>
  <p>
    <%= f.label :uid, 'UID' %><br>
    <%= f.text_field :uid %>
  </p>

  <p>
    <%= f.label :password, 'パスワード' %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation, 'パスワード（確認）' %><br>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit '登録' %>
  </p>
<% end %>

<p><%= link_to "ログインページへ戻る", root_path %></p>
